
<div class="container">
  <%= form_for :product, url: products_path, local: true do |form| %>
  <p>
    <%= form.label "Label" %><br>
    <%= form.text_field :label %>
  </p>
  <p>
    <%= form.label "Installation Priority" %><br>
    <%= form.number_field :installation_priority %>
  </p>
  <p>
    <%= form.label "Details" %><br>
    <%= form.text_area :details %>
  </p>

  <p>
    <%= form.submit %>
  </p>
  <% end %>
</div>

<div class ="container">
  <table class="table ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Label</th>
      <th scope="col">Installation Priority</th>
      <th scope="col">Details</th>
      <th scope="col"> </th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
        <td><%= product.label%></td>
        <td><%= product.installation_priority %></td>
        <td><%= product.details %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to "Delete", product, method: :delete, data: { confirm: "Are you sure that product"}%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
